{
  "name": "DS-AI Architect Node",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-ceintl.vscode-language-pack-id",
        "formulahendry.auto-rename-tag"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "configureZshAsDefaultShell": true
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "python3 -m pip install --upgrade pip && python3 -m pip install flask requests flask-cors && chmod +x start_ds.sh",
  "waitFor": "postCreateCommand",
  "portsAttributes": {
    "5000": {
      "label": "DS-AI GUI",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    }
  },
  "postStartCommand": "./start_ds.sh"
}
